{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  // TODO: ADDED THIS IDK
  "parserOptions": {
    "project": ["tsconfig.json", "tsconfig.dev.json", "tsconfig.eslint.json"],
    "sourceType": "module",
    // "ignoredCompilerOptions": ["allowImportingTsExtensions"]
  }
}
